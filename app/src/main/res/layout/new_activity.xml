<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:text="@string/salary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/ctc"
            android:gravity="center"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/btncheck"
            android:layout_marginLeft="5sp"
            android:textColor="#ffffff"
            android:id="@+id/btnCalculate"
            android:background="@color/colorPrimary"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:layout_marginLeft="5sp"
            android:textColor="#ffffff"
            android:id="@+id/btnsetting"
            android:background="@color/colorPrimary"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TableLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:background="#ffffff">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/TextView1"
                android:text="COMPONENT"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:id="@+id/TextView2"
                android:text="PERCENTAGE"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:id="@+id/TextView3"
                android:text="AMOUNT"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:padding="20dip"
                android:gravity="center"/>

        </TableRow>
            <TableRow
                android:id="@+id/tableRow2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView

                    android:text="Basic Pay"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/basicPayPer"
                    android:text="00"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/basicPayAmt"
                    android:text="00"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"/>

            </TableRow>


        <TableRow
            android:id="@+id/tableRow3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView

                android:text="HRA"
                android:textStyle="bold"
                android:layout_weight="1"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:id="@+id/hraPer"
                android:text="00"
                android:layout_weight="1"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:id="@+id/hraAmt"
                android:text="00"
                android:layout_weight="1"
                android:padding="20dip"
                android:gravity="center"/>

        </TableRow>
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView

                    android:text="Special A."
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/saPer"
                    android:text="00"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/saAmt"
                    android:text="00"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"/>

            </TableRow>
            <TableRow
                android:id="@+id/tableRow5"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView

                    android:text="Canteen A."
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/caPer"
                    android:text="00"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/caAmt"
                    android:text="00"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"/>

            </TableRow>
            <TableRow
                android:id="@+id/tableRow6"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView

                    android:text="SDA"
                    android:textStyle="bold"

                    android:padding="20dip"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/sdaPer"
                    android:text="00"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/sdaAmt"
                    android:text="00"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"/>

            </TableRow>
            <TableRow
                android:id="@+id/tableRow7"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView

                    android:text="EPF"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/epfPer"
                    android:text="00"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/epfAmt"
                    android:text="00"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"/>

            </TableRow>
            <TableRow
                android:id="@+id/tableRow8"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView

                    android:text="TAX"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/taxPer"
                    android:text="00"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/taxAmt"
                    android:text="00"
                    android:textColor="@color/colorAccent"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"/>

            </TableRow>


            <TableRow
                android:id="@+id/tableRow10"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView

                    android:text="Net Salary"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"/>

                <TextView

                    android:text="-"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/netsalaryAmt"
                    android:text="00"
                    android:background="#dcdcdc"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"/>

            </TableRow>
        </TableLayout>




    </LinearLayout>




    </LinearLayout>
